- if user_signed_in?
  %ul{"class" => "tabs"}
    %li= link_to "Home", root_path
    - if can? :read, User
      %li= link_to "Manage Users", users_path
    - if can? :read, Project
      %li= link_to "Your Projects", projects_path
    - if can? :all_projects, Project
      %li= link_to "All Projects", projects_path + "?all=y"
    - if can? :read, Review 
      %li= link_to "Your Reviews", reviews_path
    - if can? :read, Review
      %li= link_to "All Reviews", reviews_path + "?all=y"
